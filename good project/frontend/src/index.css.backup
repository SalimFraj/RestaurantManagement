@import url('https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700;800;900&family=Playfair+Display:wght@700;800;900&display=swap');

@tailwind base;
@tailwind components;
@tailwind utilities;

@layer base {
  :root {
    /* Design System Colors */
    --color-primary: 31 126 248;
    --color-secondary: 168 85 247;
    --color-accent: 251 146 60;
    --color-success: 34 197 94;
    --color-warning: 251 191 36;
    --color-error: 239 68 68;
    --color-info: 59 130 246;

    /* Gradient Presets */
    --gradient-primary: linear-gradient(135deg, rgb(31 126 248) 0%, rgb(168 85 247) 100%);
    --gradient-secondary: linear-gradient(135deg, rgb(168 85 247) 0%, rgb(236 72 153) 100%);
    --gradient-sunset: linear-gradient(135deg, rgb(251 146 60) 0%, rgb(239 68 68) 100%);
    --gradient-ocean: linear-gradient(135deg, rgb(6 182 212) 0%, rgb(59 130 246) 100%);
    --gradient-forest: linear-gradient(135deg, rgb(34 197 94) 0%, rgb(16 185 129) 100%);

    /* Shadows */
    --shadow-sm: 0 1px 2px 0 rgb(0 0 0 / 0.05);
    --shadow-md: 0 4px 6px -1px rgb(0 0 0 / 0.1), 0 2px 4px -2px rgb(0 0 0 / 0.1);
    --shadow-lg: 0 10px 15px -3px rgb(0 0 0 / 0.1), 0 4px 6px -4px rgb(0 0 0 / 0.1);
    --shadow-xl: 0 20px 25px -5px rgb(0 0 0 / 0.1), 0 8px 10px -6px rgb(0 0 0 / 0.1);
    --shadow-2xl: 0 25px 50px -12px rgb(0 0 0 / 0.25);
    --shadow-glow: 0 0 20px rgb(31 126 248 / 0.5);
    --shadow-glow-purple: 0 0 20px rgb(168 85 247 / 0.5);

    /* Spacing */
    --spacing-xs: 0.25rem;
    --spacing-sm: 0.5rem;
    --spacing-md: 1rem;
    --spacing-lg: 1.5rem;
    --spacing-xl: 2rem;
    --spacing-2xl: 3rem;

    /* Border Radius */
    --radius-sm: 0.375rem;
    --radius-md: 0.5rem;
    --radius-lg: 0.75rem;
    --radius-xl: 1rem;
    --radius-2xl: 1.5rem;
    --radius-full: 9999px;

    /* Transitions */
    --transition-fast: 150ms cubic-bezier(0.4, 0, 0.2, 1);
    --transition-base: 300ms cubic-bezier(0.4, 0, 0.2, 1);
    --transition-slow: 500ms cubic-bezier(0.4, 0, 0.2, 1);
    --transition-bounce: 500ms cubic-bezier(0.68, -0.55, 0.265, 1.55);
  }

  * {
    @apply transition-colors duration-300;
  }

  html {
    scroll-behavior: smooth;
  }

  body {
    margin: 0;
    font-family: 'Inter', -apple-system, BlinkMacSystemFont, 'Segoe UI', 'Roboto', 'Oxygen',
      'Ubuntu', 'Cantarell', 'Fira Sans', 'Droid Sans', 'Helvetica Neue', sans-serif;
    -webkit-font-smoothing: antialiased;
    -moz-osx-font-smoothing: grayscale;
    @apply bg-gradient-to-br from-base-200 via-base-100 to-base-200;
  }

  h1,
  h2,
  h3 {
    font-family: 'Playfair Display', serif;
  }

  code {
    font-family: 'Fira Code', source-code-pro, Menlo, Monaco, Consolas, 'Courier New', monospace;
  }
}

@layer components {

  /* Glass Morphism */
  .glass {
    @apply bg-base-100/80 backdrop-blur-md border border-base-300/50;
  }

  .glass-dark {
    @apply bg-base-300/30 backdrop-blur-lg border border-base-content/10;
  }

  /* Neumorphism */
  .neumorphic {
    @apply bg-base-200 rounded-2xl;
    box-shadow: 12px 12px 24px rgba(0, 0, 0, 0.1), -12px -12px 24px rgba(255, 255, 255, 0.5);
  }

  .neumorphic-inset {
    @apply bg-base-200 rounded-2xl;
    box-shadow: inset 8px 8px 16px rgba(0, 0, 0, 0.1), inset -8px -8px 16px rgba(255, 255, 255, 0.5);
  }

  /* Gradient Text */
  .gradient-text {
    @apply bg-gradient-to-r from-primary to-secondary bg-clip-text text-transparent;
  }

  .gradient-text-sunset {
    @apply bg-gradient-to-r from-orange-500 to-red-500 bg-clip-text text-transparent;
  }

  .gradient-text-ocean {
    @apply bg-gradient-to-r from-cyan-500 to-blue-500 bg-clip-text text-transparent;
  }

  /* Buttons Enhanced */
  .btn-glow {
    @apply shadow-lg hover:shadow-glow transition-all duration-300;
  }

  .btn-glow-purple {
    @apply shadow-lg hover:shadow-glow-purple transition-all duration-300;
  }

  /* Card Effects */
  .card-hover {
    @apply transition-all duration-300 hover:shadow-2xl hover:scale-[1.02] hover:-translate-y-1;
  }

  .card-glow {
    @apply transition-all duration-300 hover:shadow-glow;
  }

  /* Skeleton Loaders */
  .skeleton {
    @apply animate-pulse bg-base-300 rounded;
  }

  .skeleton-text {
    @apply h-4 bg-base-300 rounded animate-pulse;
  }

  .skeleton-avatar {
    @apply w-12 h-12 rounded-full bg-base-300 animate-pulse;
  }
}

@layer utilities {

  /* Animations */
  .animate-fade-in {
    animation: fadeIn 0.6s ease-out;
  }

  .animate-fade-in-up {
    animation: fadeInUp 0.6s ease-out;
  }

  .animate-slide-in-left {
    animation: slideInLeft 0.5s ease-out;
  }

  .animate-slide-in-right {
    animation: slideInRight 0.5s ease-out;
  }

  .animate-slide-up {
    animation: slideUp 0.6s ease-out;
  }

  .animate-scale-in {
    animation: scaleIn 0.4s cubic-bezier(0.68, -0.55, 0.265, 1.55);
  }

  .animate-bounce-in {
    animation: bounceIn 0.8s cubic-bezier(0.68, -0.55, 0.265, 1.55);
  }

  .animate-rotate-in {
    animation: rotateIn 0.6s ease-out;
  }

  .animate-float {
    animation: float 3s ease-in-out infinite;
  }

  .animate-pulse-glow {
    animation: pulseGlow 2s ease-in-out infinite;
  }

  /* Hover Effects */
  .hover-lift {
    @apply transition-transform duration-300 hover:-translate-y-2 hover:shadow-xl;
  }

  .hover-glow {
    @apply transition-all duration-300 hover:shadow-glow;
  }

  .hover-scale {
    @apply transition-transform duration-300 hover:scale-105;
  }

  .hover-tilt {
    @apply transition-transform duration-300 hover:rotate-2;
  }

  /* Gradient Backgrounds */
  .gradient-primary {
    background: var(--gradient-primary);
  }

  .gradient-secondary {
    background: var(--gradient-secondary);
  }

  .gradient-sunset {
    background: var(--gradient-sunset);
  }

  .gradient-ocean {
    background: var(--gradient-ocean);
  }

  .gradient-forest {
    background: var(--gradient-forest);
  }

  /* Shadow Utilities */
  .shadow-glow {
    box-shadow: var(--shadow-glow);
  }

  .shadow-glow-purple {
    box-shadow: var(--shadow-glow-purple);
  }

  /* Backdrop Blur */
  .backdrop-blur-xs {
    backdrop-filter: blur(2px);
  }

  .backdrop-blur-sm {
    backdrop-filter: blur(4px);
  }
}

